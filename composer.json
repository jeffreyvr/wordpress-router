{
    "name": "hexbit/router",
    "description": "Wordpress Router",
    "keywords": [
        "hexbit",
        "smarteist",
        "wordpress",
        "symfony",
        "altorouter",
        "router"
    ],
    "homepage": "https://github.com/smarteist/wordpress-router",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Hosseini",
            "email": "ali.hosseini.sr@gmail.com",
            "homepage": "https://hexbit.dev/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "altorouter/altorouter": "^2.0",
        "symfony/http-foundation": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Hexbit\\Router\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hexbit\\Router\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
